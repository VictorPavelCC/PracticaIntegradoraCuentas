  <body>
    <div class="container mt-5">
      <div class="product-details">
        <div class="product-info">
          <h1>{{payload._doc.name}}</h1>
          <p><strong>Categor√≠a:</strong> {{payload._doc.category}}</p>
          <p><strong>Stock:</strong> {{payload._doc.stock}}</p>
          <p><strong>Precio:</strong> ${{payload._doc.price}}</p>
        </div>
        <div class="product-image-container">
          <img
            src="{{payload._doc.image}}"
            alt="{{payload._doc.name}}"
            class="product-image"
          />
          <button
            class="add-to-cart-btn"
            onclick="addToCart(this)"
            id="{{payload._doc._id}}"
          >
            <i class="bi bi-cart-plus"></i>
          </button>
        </div>
      </div>
    </div>

